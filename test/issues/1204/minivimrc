set nocompatible
let &rtp = '~/.vim/bundle/vimtex,' . &rtp
let &rtp .= ',~/.vim/bundle/vimtex/after'
filetype plugin indent on
syntax enable

set shiftwidth=2
set tabstop=2

nnoremap q :qall!<cr>

silent edit indent.tex
normal! 4ggk==j

call timer_start(500, 'Refresh', {'repeat': -1})

function! Refresh(time) abort
  silent! VimtexReload
  normal! ==
endfunction
